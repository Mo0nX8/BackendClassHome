@using VBJ._13B.Group1.WebApp.Models
@{
}
@model Movie


<h3>Are you sure you want to delete this movie?</h3>
<div>@Model.Title</div>
<div>The action cannot be undone.</div>

@using (Html.BeginForm("DeleteMovie", "Movie", new { id = Model.ID }, FormMethod.Post))
{
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index")">Cancel</a>
}
